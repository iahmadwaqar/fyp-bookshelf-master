<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp">
       <LinearLayout

           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <de.hdodenhof.circleimageview.CircleImageView
               android:id="@+id/userImage"
               android:layout_width="75dp"
               android:layout_height="75dp"
               android:src="@drawable/ic_loading"
               app:civ_border_width="0dp" />

           <TextView
               android:id="@+id/userName"
               android:layout_marginLeft="20dp"
               android:text="Name"
               android:textSize="45dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

           <TextView
               android:id="@+id/blogTime"
               android:layout_marginLeft="20dp"
               android:text="Time"
               android:textSize="45dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

       </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <LinearLayout
            android:layout_margin="2dp"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_weight="1"
                android:id="@+id/blogText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="قائداعظم نے 25 مارچ 1948 کو چٹاگانگ میں سرکاری افسروں سے خطاب کرتے ہوئے فرمایا : “وہ دن گئے جب ہمارے ملک پر نوکرشاہی کا راج تھا اب آپ حاکم نہیں رہے اب آپ ملازموں میں سے ہیں لوگوں کو یہ محسوس کرائیے کہ آپ انکے دوست اور خدمت گار ہیں سیاست آپ کا کام نہیں آپکا کام خدمت ہے"
                android:textSize="18dp"
                android:textStyle="bold|italic" />

            <ImageView
                android:layout_weight="1"
                android:src="@drawable/donate"
                android:id="@+id/blogImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/blogChat"
                android:text="chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/appointmetn"
                android:text="Appointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>